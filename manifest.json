{
  "manifest_version": 2,

  "name": "Image search extension",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "content_scripts": [
    {
        "matches": [ "http://*/*", "https://*/*" ],
        "js": [ "content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
