{
  "manifest_version": 2,

  "name": "Image search extension",
  "description": "This extension shows an alternative result when doing a Google or Bing image search.",
  "icons": {"16": "icons/page-16.png",
            "32": "icons/page-32.png"
  },
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
        "matches": [ "http://*/*", "https://*/*" ],
        "js": [ "content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*", "https://*/*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
