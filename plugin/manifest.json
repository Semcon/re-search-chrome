{
    "manifest_version": 2,
    "name": "Re-Search",
    "version": "1.0.0",
    "description": "This extension shows an alternative result when doing a Google or Bing image search.",
    "web_accessible_resources": [
        "icons/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}